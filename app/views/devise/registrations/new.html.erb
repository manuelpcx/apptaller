
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="text-center mb-4">
      <h2 class="mt-4">Sign up</h2>
      <div class="">
        <br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="form-label-group">
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 character minimum)" %>
      </div>

      <div class="form-label-group">
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
  </div>
  
