<p id="notice"><%= notice %></p>

<h1 class="text-center">Autos</h1>
<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Cliente</th>
          <th>Marca</th>
          <th>Model</th>
          <th>Year</th>
          <th>Ppu</th>
          <th>Mecanico</th>
          <th>Diagnostico</th>
          <th>Precio</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      
        <% @cars.each do |car| %>
          <tr>
            <td><%= car.client %></td>
            <td><%= car.marca %></td>
            <td><%= car.model %></td>
            <td><%= car.year %></td>
            <td><%= car.ppu %></td>
            <td><%= car.mec %></td>
            <td><%= car.diagnostico %></td>
            <td><p>$<%= car.price %></p></td>
            <td><%= link_to 'Listo', car_orders_path(car), class:'btn btn-outline-info', method: :post %></td>
            <td><%= link_to 'Edit', edit_car_path(car), class:'btn btn-success' %></td>
            <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New Car', new_car_path, class:'btn btn-outline-danger' %>
  <%= link_to 'Ordenes', orders_path, class:'btn btn-outline-success float-right' %>
</div>
<br>


